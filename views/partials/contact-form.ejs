<form id="contact-form" onsubmit="return validateForm()">
    <input type="hidden" name="contact_number" value="697483" required />
    <label>Name (required)</label>
    <input type="text" id="user_name" name="user_name" placeholder="Full Name" required />
    <label>Email (required)</label>
    <input type="email" id="user_email" name="user_email" placeholder="Email Address" required />
    <label>Message (required)</label>
    <textarea name="message"></textarea>
    <input type="submit" value="Send" class="btn" />
</form>


